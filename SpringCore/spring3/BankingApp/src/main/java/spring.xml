<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans   
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
	
	<!-- For Banking APP -->
	<bean id = "bankAccountServiceImpl" class = "com.drishya.BankingApp.BankAccountServiceImpl"/>
		
	<bean id = "bankAccount" class = "com.drishyaBankingApp.BankAccount">
		<property name="accountId" value = "10"/>
		<property name="accountHolderName" value="drishya"/>
		<property name="accountType" value="Savings"/>
		<property name="accountBalance" value="784670"/>
	</bean>
	
	<bean id="bankAccountepositoryImpl" class = "com.drishya.BankingApp.BankAccountepositoryImpl"/>
	
	<bean id = "bankAccountController" class = "com.drishya.BankingApp.BankAccountController" autowire="constructor"/>
</beans>